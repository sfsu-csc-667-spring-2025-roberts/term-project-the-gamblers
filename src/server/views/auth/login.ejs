<!DOCTYPE html>
<html lang="en">
<head>
    <title></title>
    <%- include ('../shared/head') %>
</head>
<body><%- include ('../shared/header') %>
    <h1>Login</h1>
    <% if(error !== undefined) { %>
        <div class="error">
            <p><%= error %></p>
        </div>
    <% } %>
    <form action="/auth/login" method="POST">
        <div>
            <label for="email">Email:</label>
            <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            placeholder="Enter your email"
            />
        </div>
        <div>
            <label for="password">Password:</label>
            <input 
            type="password" 
            id="password" 
            name="password" 
            required 
            />
        </div>
        <button type="submit">Register</button>
    </form>
</body>
</html>
